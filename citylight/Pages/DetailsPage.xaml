<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="citylight.Pages.DetailsPage">
    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
           <ScrollView>
                <StackLayout Margin="10">
                    <Label x:Name="pointIdLabel"/>
                    <Label x:Name="pointNameLabel"/>
                    <Label x:Name="address1Label"/>
                    <Label x:Name="address2Label"/>
                    <Label x:Name="CityStateZipLabel"/>
                    <WebView x:Name="DescrWebView" IsVisible="true" BackgroundColor="Silver" Source="http://example.com/"/>
                    <Image x:Name="defaultImage"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
        
        <StackLayout Padding="12"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1">
            <ActivityIndicator x:Name="ActivityIndicator" Color ="#80000000"/>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
